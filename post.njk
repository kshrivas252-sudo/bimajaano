{% extends "layouts/base.njk" %}
{% block content %}
<div class="breadcrumbs">
  <a href="/">Home</a> › <a href="/{{ section }}/">{{ sectionTitle }}</a> › {{ title }}
</div>
<article class="card">
  <h1>{{ title }}</h1>
  <div class="small">{{ date | dateIso }}{% if category %} • {{ category }}{% endif %}</div>
  {% if image %}<img class="thumb" src="{{ image }}" alt="">{% endif %}
  <div class="content">{{ content | safe }}</div>
</article>
{% endblock %}